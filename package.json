{
  "name": "front-end",
  "description": "GitFlash front-end application built using Yarn Workspaces and Lerna",
  "author": "nirmalya.email@gmail.com",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "type-check": "tsc",
    "lint": "prettier --write '**/*.{js,json,css,md,tsx,ts,yml}'"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@prisma/cli": "^2.6.2",
    "@types/node": "^14.6.4",
    "@types/node-fetch": "^2.5.7",
    "@types/react": "^16.9.49",
    "@types/resemblejs": "^1.3.28",
    "babel-loader": "^8.1.0",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.3.0",
    "microbundle": "^0.12.3",
    "prettier": "^2.1.1",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,tsx,ts}": [
      "prettier --write"
    ]
  }
}
